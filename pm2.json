{
  "apps": [
    {
      "name": "ABSTRABOT",
      "script": "./server/index.js",
      "watch": true,
      "instances": 4,
      "exec_mode": "cluster",
      "merge_logs": true,
      "max_memory_restart": "256M",
      "cron_restart": "0 */6 * * *",
      "max_restarts": "50",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
